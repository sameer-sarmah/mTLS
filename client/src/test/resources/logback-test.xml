<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- HTTP Client Debug Logging -->
    <logger name="org.apache.hc.client5" level="DEBUG"/>
    <logger name="org.apache.hc.client5.http" level="DEBUG"/>
    <logger name="org.apache.hc.client5.http.wire" level="DEBUG"/>
    <logger name="org.apache.hc.client5.http.headers" level="DEBUG"/>
    
    <!-- WireMock Debug Logging -->
    <logger name="com.github.tomakehurst.wiremock" level="DEBUG"/>
    <logger name="wiremock.org.eclipse.jetty" level="DEBUG"/>
    
    <!-- Spring Boot Test Logging -->
    <logger name="org.springframework.web.client" level="DEBUG"/>
    <logger name="org.springframework.boot.test.web.client" level="DEBUG"/>
    
    <!-- Our Application Logging -->
    <logger name="northwind" level="DEBUG"/>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>